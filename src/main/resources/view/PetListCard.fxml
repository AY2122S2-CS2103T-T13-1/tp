<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane HBox.hgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" prefWidth="300"/>
        </columnConstraints>
        <VBox alignment="CENTER" minHeight="105" GridPane.columnIndex="0">
            <padding>
                <Insets top="5" right="5" bottom="5" left="15"/>
            </padding>
            <HBox spacing="5" alignment="CENTER_LEFT">
                <Label fx:id="id" styleClass="cell_big_label">
                    <minWidth>
                        <!-- Ensures that the label text is never truncated -->
                        <Region fx:constant="USE_PREF_SIZE"/>
                    </minWidth>
                </Label>
                <Label fx:id="name" text="\$first" styleClass="cell_big_label"/>
            </HBox>
            <VBox alignment="CENTER_LEFT">
                <FlowPane fx:id="tags"/>
                <Label fx:id="ownerName" styleClass="cell_small_label" text="\$ownerName"/>
                <Label fx:id="phone" styleClass="cell_small_label" text="\$phone"/>
                <Label fx:id="address" styleClass="cell_small_label" text="\$address"/>
                <Label fx:id="diet" styleClass="cell_small_label" text="\$diet"/>
            </VBox>
        </VBox>
        <VBox id="attendancePane" alignment="CENTER" minHeight="105" GridPane.columnIndex="1">
            <padding>
                <Insets top="5" right="5" bottom="5" left="5"/>
            </padding>
            <HBox alignment="CENTER_LEFT">
                <Label styleClass="cell_small_label" text="Attendance"/>
            </HBox>
            <FlowPane fx:id="attendanceTags" alignment="CENTER_LEFT"/>
        </VBox>
    </GridPane>
</HBox>
